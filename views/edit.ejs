<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Edit Task</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content">
              <% if(error !== null){ %>
                <div class="row teal lighten-4">
                  <div class="col s12">
                    <p class="center-align"><%= error %></p>
                  </div>
                </div>
              <% } %>
              <span class="card-title">Edit Task</span>
              <div class="row">
                <form class="col s12" method="post" action="/update-task/<%= task.id %>">
                  <div class="row">
                    <div class="input-field col s12">
                      <input type="hidden" name="taskId" value="<%= task.id %>">
                      <input placeholder="Updated Task" id="updatedTask" type="text" name="updatedTask" value="<%= task.task %>">
                      <label for="updatedTask">Update Task</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col s6">
                      <input class="btn" type="submit" value="Update Task">
                    </div>
                    <div class="col s6">
                      <a class="btn" href="/">Cancel</a>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>
